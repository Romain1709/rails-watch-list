<h1>Ajouter un signet à la liste "<%= @list.name %>"</h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, label: "Choisissez un film" %>
  <%= f.input :comment, label: "Votre commentaire" %>
  <%= f.button :submit, "Ajouter ce film à la liste", class: "btn btn-primary mb-3" %>
<% end %>

<%= link_to "← Retour à la liste", list_path(@list) %>
